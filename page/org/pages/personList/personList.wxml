<view class="container1">



    <loading hidden="{{hidden}}">
        加载中...
    </loading>

    <block>

    <view class="org_top">
    
        <view class="top_name"> 每日一图</view>
        </view>

    </block>


    <block wx:for-items="{{items}}">
        <navigator url="../person/person?{{id}}" class="flex item">
            <view class="item_left">
